    "version": "0.2.0",
    "configurations": [
        {
            "name": "TestDebug",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildDebug",
            "program": "dotnet",
            "args": [
                "test",
                "--logger",
                "trx",
                "--results-directory",
                "src/Tests/TestResults"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": "TestRelease",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildRelease",
            "program": "dotnet",
            "args": [
                "test",
                "--logger",
                "trx",
                "--results-directory",
                "src/Tests/TestResults"
            ],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false
        },
    ]
}