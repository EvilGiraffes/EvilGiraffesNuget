{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "--logger",
                "trx",
                "--results-directory",
                "src/Tests/TestResults"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/EvilGiraffes.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/EvilGiraffes.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/EvilGiraffes.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}